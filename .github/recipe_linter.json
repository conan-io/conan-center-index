{
    "problemMatcher": [
        {
            "owner": "recipe_linter_errors",
            "severity": "error",
            "pattern": [
                {
                    "regexp": "(\\S+):(\\d+):(\\d+):\\s(E\\d+):\\s(.+)\\s\\((\\S+)\\)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 5,
                    "code": 4
                }
            ]
        },
        {
            "owner": "recipe_linter_warnings",
            "severity": "warning",
            "pattern": [
                {
                    "regexp": "(\\S+):(\\d+):(\\d+):\\s(W(?!0511)\\d+):\\s(.+)\\s\\((\\S+)\\)",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 5,
                    "code": 4
                }
            ]
        }
    ]
}
