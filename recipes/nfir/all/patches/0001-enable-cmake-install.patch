Subject: [PATCH] enable cmake install

---
 CMakeLists.txt | 13 +++++++++++++
 1 file changed, 13 insertions(+)

diff --git a/CMakeLists.txt b/CMakeLists.txt
index 2fb3e93..a89934d 100644
--- a/CMakeLists.txt
+++ b/CMakeLists.txt
@@ -27,3 +27,16 @@ message(STATUS "PROJECT_NAME: ${PROJECT_NAME}")
 # Pick up the library and binary
 add_subdirectory(src/lib)
 add_subdirectory(src/bin)
+
+install(DIRECTORY src/include/
+        DESTINATION ${CMAKE_INSTALL_INCLUDEDIR}/NFIR
+        FILES_MATCHING PATTERN "*.h*")
+
+install(TARGETS ${PROJECT_NAME}
+        ARCHIVE DESTINATION ${CMAKE_INSTALL_LIBDIR}
+        LIBRARY DESTINATION ${CMAKE_INSTALL_LIBDIR}
+        RUNTIME DESTINATION ${CMAKE_INSTALL_BINDIR})
+
+install(PROGRAMS ${CMAKE_BINARY_DIR}/src/bin/NFIR_bin
+        DESTINATION ${CMAKE_INSTALL_BINDIR}
+        RENAME NFIR)
\ No newline at end of file
