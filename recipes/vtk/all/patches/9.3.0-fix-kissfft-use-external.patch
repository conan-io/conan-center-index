--- a/ThirdParty/kissfft/CMakeLists.txt	2023-11-14 07:37:21.000000000 +0800
+++ b/ThirdParty/kissfft/CMakeLists.txt	2024-02-24 15:07:11.042704429 +0800
@@ -1,12 +1,23 @@
 set(KISSFFT_SCALAR_TYPE "double")
 
-vtk_module_third_party_internal(
-  LICENSE_FILES           "vtkkissfft/COPYING"
-  SPDX_LICENSE_IDENTIFIER "BSD-3-Clause"
-  SPDX_COPYRIGHT_TEXT     "Copyright (c) 2003-2010 Mark Borgerding"
-  SPDX_DOWNLOAD_LOCATION  "git+https://gitlab.kitware.com/third-party/kissfft.git@for/vtk-20211123-master-g6f09c27"
-  VERSION                 "master"
-  STANDARD_INCLUDE_DIRS)
+vtk_module_third_party(
+  INTERNAL
+    LICENSE_FILES
+      "vtkkissfft/COPYING"
+    SPDX_LICENSE_IDENTIFIER
+      "BSD-3-Clause"
+    SPDX_COPYRIGHT_TEXT
+      "Copyright (c) 2003-2010 Mark Borgerding"
+    SPDX_DOWNLOAD_LOCATION
+      "git+https://gitlab.kitware.com/third-party/kissfft.git@for/vtk-20211123-master-g6f09c27"
+    VERSION
+      "master"
+    STANDARD_INCLUDE_DIRS
+  EXTERNAL
+    PACKAGE kissfft
+    TARGETS kissfft::kissfft-double
+    STANDARD_INCLUDE_DIRS
+  )
 
 configure_file(
   "${CMAKE_CURRENT_SOURCE_DIR}/vtk_kissfft.h.in"
