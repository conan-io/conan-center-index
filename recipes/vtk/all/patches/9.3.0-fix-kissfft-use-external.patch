--- a/Common/Math/vtkFFT.h	2023-11-14 07:37:21.000000000 +0800
+++ b/Common/Math/vtkFFT.h	2024-02-24 15:07:11.074695861 +0800
@@ -31,7 +31,7 @@
 #include "vtk_kissfft.h" // kiss_fft_scalar, kiss_fft_cpx
